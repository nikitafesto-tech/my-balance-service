# 0. Личный кабинет (Твой сайт)
lk.neirosetim.ru {
    reverse_proxy app:8081
}

auth.neirosetim.ru {
    reverse_proxy casdoor:8000 {
        # Важно: передаем оригинальный хост, чтобы Casdoor знал свой домен
        header_up Host {host}
        
        # Эти заголовки у вас уже были, оставляем
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto https
    }
}